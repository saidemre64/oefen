{% if classes is defined %}
{% set newClasses = classes %}
{% else %}
{% set newClasses = "" %}


{% endif %}

{% if elementIds is defined %}
	{% set ids = elementIds %}
	{% else %}
	{% set ids = "" %}
{% endif %}


{# nadat je hidden schrijft in de class en verwijdert werkt het #}
<div class="w-1/3 p2 {{ newClasses }}" id = {{ ids }}>
	<div class= "border rounded p-6">
		<h3 class="font-bold text-xl">{{ element.title }}</h3>
		{% if element.intro|length %}

			<div class="p-2">
				{% if element.intro|length > 200 %}
					{{ element.intro|slice(0, 200)|striptags ~ '...' }}
				{% else %}
					{{ element.intro }}
				{% endif %}
			</div>
		{% endif %}
		<a class="no-underline hover:underline text-blue-400" href="{{element.getUrl() }}">{{ "Lees meer" }}</a>
	</div>
</div>


